# Environment variables for the Receipts Automation App
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For local PostgreSQL development
DEV_DATABASE_URL=postgresql://username:password@localhost:5432/receipts_dev
DATABASE_URL=postgresql://username:password@localhost:5432/receipts_prod
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/receipts_test

# PostgreSQL Connection Details (if not using full URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=receipts_dev
DB_USER=username
DB_PASSWORD=password

# File Processing Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216  # 16MB in bytes
PROCESSING_TIMEOUT=300  # 5 minutes

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
